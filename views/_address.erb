<label class="control-label"><%= name %></label>
<input type="text" name="<%= type %>_address[name]" placeholder="First and Last Name">
<input type="text" name="<%= type %>_address[company]" placeholder="Company Name">
<input type="text" name="<%= type %>_address[street1]" placeholder="Street Address1" required>
<input type="text" name="<%= type %>_address[street2]" placeholder="Street Address2" >
<input type="text" name="<%= type %>_address[city]" placeholder="City" required>
<input type="text" name="<%= type %>_address[state]" placeholder="State" required>
<input type="text" name="<%= type %>_address[zip]" pattern="\d{5}" placeholder="Zipcode (12345)" required>
<input type="text" name="<%= type %>_address[phone]" placeholder="Phone (123-456-7890)">
<input type="checkbox" name ="verify_<%= type %>" value="true"> Verify Address<br>
