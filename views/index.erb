<% if locals.keys.include?(:exception) %>
  <%= erb :_errors, locals: {exception: exception} %>
<% end %>

<form action='/shipment' method='post' class='form-horizontal' role="form">
    <div class="row">
      <div class="column column-33">
        <div class="form-group" style="padding:20px">
          <%= erb :_address, locals: {name: "From Address", type: "from"}%>
        </div>
      </div>
      <div class="column column-33">
        <div class="form-group" style="padding:20px">
          <%= erb :_address, locals: {name: "To Address", type: "to"}%>
        </div>
      </div>
      <div class="column column-33">
        <div class="form-group" style="padding:20px">
          <%= erb :_parcel_details %>
          <input type='submit' value='Get Rate'>
        </div>
      </div>
    </div>
  </div>
</form>
